FROM python:3.14-slim

# 1. Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=off \
    PIP_DISABLE_PIP_VERSION_CHECK=on \
    PIP_DEFAULT_TIMEOUT=100

WORKDIR /app

# 2. Install system deps (if needed for compiling Python packages)
# RUN apt-get update && apt-get install -y gcc libpq-dev && rm -rf /var/lib/apt/lists/*

# 3. Install Poetry
RUN pip install poetry

# 4. Copy only requirements to cache them in docker layer
COPY pyproject.toml poetry.lock /app/

# 5. Project initialization:
# - Turn off venv creation (install deps globally in container)
# - Install dependencies (no-root because code isn't copied yet)
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi --no-root

# 6. Copy project code
COPY . /app

# 7. (Optional) Create a non-root user for security (good practice, often skipped in dev)